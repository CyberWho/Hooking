@model Hooking.Models.BoatFishingEquipment

@{
    ViewData["Title"] = "Edit";
}

<h1>Izmenite dostupne pogodnosti za pecanje</h1>

<h4>Pecaroške pogodnosti</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BoatId" class="control-label"></label>
                <input asp-for="BoatId" class="form-control" />
                <span asp-validation-for="BoatId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FishingEquipment" class="control-label"></label>
                <input asp-for="FishingEquipment" class="form-control" />
                <span asp-validation-for="FishingEquipment" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Potvrdi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
