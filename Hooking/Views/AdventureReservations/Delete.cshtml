@model Hooking.Models.AdventureReservation

@{
    ViewData["Title"] = "Delete";


}
@{ 
    AdventureRealisation adventureRealisation = (AdventureRealisation)ViewData["AdventureRealisation"];

}

<h1>Delete</h1>
@if ((adventureRealisation.StartDate - DateTime.Now).Days > 3)
{
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>AdventureReservation</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AdventureRealisationId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AdventureRealisationId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserDetailsId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserDetailsId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RowVersion)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RowVersion)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a href='javascript:history.go(-1)'>>Nazad</a>
        </form>
    </div>
}
else
{
<h3>Ne mozete otkazati rezervaciju 3 dana pred istu</h3>
<div>
    <h4>AdventureReservation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AdventureRealisationId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AdventureRealisationId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserDetailsId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserDetailsId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RowVersion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RowVersion)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a href='javascript:history.go(-1)'>>Nazad</a>
    </form>
</div>
}

