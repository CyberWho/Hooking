@page
@model Hooking.Areas.Identity.Pages.Account.Manage.CottageReservationsHistoryModel
@using Hooking.Models;
@{
    ViewData["Title"] = "Istorija rezervacija vikendica";
    ViewData["ActivePage"] = ManageNavPages.CottageReservationHistory;

}
@{
    var cottages = (List<Cottage>)ViewData["Cottage"];
    int i = 0;
}

<h4>@ViewData["Title"]</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                Naziv vikendice
            </th>
            <th>
                Od
            </th>
            <th>
                Do
            </th>
            <th>
                Cena
            </th>
            <th>
                Max broj osoba
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.myCottageReservations)
        {
            @if (DateTime.Compare(item.StartDate, DateTime.Now) < 0)
            {
                <tr>
                    <td>
                        Ime vikendice
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaxPersonCount)
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Prilozi zalbu</a>
                        <a href="@Url.Action("Details", "CottageReservations", new { Id = @item.Id })">Prikazi vise</a>

                    </td>


                </tr>

            }

            i++;
        }
    </tbody>
</table>

